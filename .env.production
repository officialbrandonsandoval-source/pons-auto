# Production Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://shiftly_user:your_secure_password_here@postgres:5432/shiftly

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Configuration
API_KEYS=prod-key-abc123,prod-key-xyz789
SECRET_KEY=your_secret_key_here_min_32_chars

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=info
API_WORKERS=4

# AutoTrader API (Option 2)
AUTOTRADER_API_KEY=your_autotrader_api_key
AUTOTRADER_API_URL=https://api.autotrader.com/v1

# Cars.com API (Option 2)
CARSCOM_API_KEY=your_carscom_api_key
CARSCOM_API_URL=https://api.cars.com/v1

# Facebook Marketplace API (Option 2)
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id

# Email Configuration (Option 3)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@shiftly.auto

# AWS S3 for Image Storage (Option 3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=shiftly-vehicle-images
AWS_REGION=us-east-1

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Webhooks (Option 3)
WEBHOOK_SECRET=your_webhook_secret_here
