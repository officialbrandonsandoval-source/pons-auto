# Streamlit Cloud Secrets Template
# Copy this to your Streamlit Cloud secrets settings

# Database Configuration (use SQLite for demo or connect to external PostgreSQL)
DATABASE_URL = "sqlite:///./pons_auto.db"

# OpenAI API Key (required for AI features)
OPENAI_API_KEY = "your-openai-api-key-here"

# Stripe Configuration (for billing features)
STRIPE_SECRET_KEY = "your-stripe-secret-key-here"
STRIPE_PUBLISHABLE_KEY = "your-stripe-publishable-key-here"
STRIPE_WEBHOOK_SECRET = "your-stripe-webhook-secret-here"

# JWT Secret (for authentication)
SECRET_KEY = "your-secret-key-here-generate-with-openssl-rand-hex-32"

# Email Configuration (optional)
SMTP_HOST = "smtp.gmail.com"
SMTP_PORT = "587"
SMTP_USER = "your-email@gmail.com"
SMTP_PASSWORD = "your-app-password-here"
SMTP_FROM = "noreply@yourdomain.com"

# Facebook Marketplace (optional - for publishing features)
FACEBOOK_ACCESS_TOKEN = "your-facebook-token-here"
FACEBOOK_PAGE_ID = "your-page-id-here"

# Other API Keys (optional)
AUTOTRADER_API_KEY = "your-autotrader-key-here"
CARS_COM_API_KEY = "your-cars-com-key-here"
CARGURUS_API_KEY = "your-cargurus-key-here"
